{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:vue/strongly-recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["prettier", "vue"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prettier/prettier": "error",
    "vue/require-v-for-key": "off",
    "no-console": "off",
    "vue/html-self-closing": "off"
  },
  "globals": {
    "DEVELOPMENT": true
  }
}
